// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "bottom", // (top|bottom|left|right)
    "height": 22, // height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "custom/swaync",
        "hyprland/workspaces",
        //"hyprland/scratchpad",
        //"hyprland/window"
        "hyprland/submap"
        //"wlr/taskbar"
    ],
    "modules-center": [
    ],
    "modules-right": [
        //"mpd",
        "tray",
        "idle_inhibitor",
        "pulseaudio",
        //"network",
        //"power-profiles-daemon",
        "group/performance",
        "battery",
        "hyprland/language",
        "clock"
    ],
    // Modules configuration
    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "disable-scroll": true,
        "warp-on-scroll": false,
        "on-click": "activate",
        "height": 0,
        "format": "{name} {windows}",
        "format-window-separator": " ",
        "window-rewrite-default": "ÔÅô",
        "window-rewrite": {
            "title<.*youtube.*>": "ÔÖ™",
            "class<firefox>": "Û∞àπ", 
            "class<firefox> title<.*github.*>": "ÔÑì", 
            // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
            "foot": "Óûï", 
            "class<com.mitchellh.ghostty>": "Ôíâ",
            "class<steam>": "ÔÜ∂",
            "class<discord>": "Ôáø",
            "class<neovim>": "ÓöÆ",
            "class<vim>": "ÓüÖ",
            "class<thunar>": "Ôìì",
            "class<obsidian>": "Û∞Öç",
            "code": "Û∞®û",
            "title<.* - (.*) - VSCodium>": "codium $1"  // captures part of the window title and formats it into output
        }
     },
    "hyprland/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "hyprland/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "group/performance": {
      "orientation": "horizontal",
      "modules": [
        "group/performance#1",
        "group/performance#2"
      ]
    },
    "group/performance#1": {
      "orientation": "vertical",
      "modules": [
        "cpu",
        "temperature"
      ]
    },
    "group/performance#2": {
      "orientation": "vertical",
      "modules": [
        "memory",
        "disk"
      ]
    },
    "wlr/taskbar": {
      "icon-size": 15,
      "on-click": "activate",
      "format": "{icon}"
    },
    "custom/weather": {
        "exec": "curl 'https://wttr.in/?format=1'",
        "interval": 3600,
        "format": "{}",
        "tooltip": true
    },
        "custom/updates": {
        "format": "Û∞ö∞ {}",
        "exec": "checkupdates | wc -l",
        "interval": 3600,
        "on-click": "ghostty -e sudo pacman -Syu",
        "signal": 8
    },
    "hyprland/window": {
	    "format": "{title}",
	    "max-length": 333,
	    "separate-outputs": true
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ ",
            "deactivated": "ÔÅ∞ "
        }
    },
    "tray": {
        "format": "{icon}",
        "icon-size": 18,
        "spacing": 5
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%d.%m.%Y}"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false,
        "interval": 1,
        "on-click": "ghostty -e htop"
    },
    "memory": {
        "format": "{}% ÔÉâ",
        "interval": 1,
        "on-click": "ghostty -e htop"
    },
    "disk": {
        "interval": 30,
        "format": "{percentage_used}% Û∞óÆ",
        "tooltip": true,
        "unit": "GB",
        "tooltip-format": "{specific_free:0.2f} GB out of {specific_total:0.2f} GB available.",
        "path": "/",
        "on-click": "ghostty -e gdu /"
    },
    "temperature": {
        // "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "interval": 1,
        "on-click": "ghostty -e s-tui"
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ÔÉß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "interval": 1
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        // (Optional) To force the use of this interface
        // "interface": "wlp2*", 
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
        //"on-click": "nm-connection-editor"
    },
    "pulseaudio": {
        "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": " ÔÑ∞",
        "format-source-muted": " ÔÑ± ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "input": true
    },
    "hyprland/language": {
	"format": " ÔÑú {} ",
	"min-length": 6,
	"format-en": "US",
	"format-cs": "CZ",
	"on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },
    "custom/poweroff": {
		"format": "ÔÄë ",
        "tooltip": "Power Off",
		"on-click": "systemctl poweroff",
  		"interval": 3600
    },
	"custom/reboot": {
		"format": "ÔÄû ",
        "tooltip": "reboot",
		"on-click": "reboot",
  		"interval": 3600
    },
	"custom/lock": {
		"format": " ÔÄ£ ",
        "tooltip": "lock",
		"on-click": "hyprlock",
  		"interval": 3600
    },
    "custom/swaync": {
		"format": "Û∞£á",
        "tooltip": "notification center",
		"on-click": "swaync-client -t -sw",
  		"interval": 3600
    }
}
